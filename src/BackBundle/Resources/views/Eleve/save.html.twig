{% extends "BackBundle::base.html.twig"%}

{% block title%}Enregistrer un élève{% endblock title%}

{% block style %}
{% endblock style %}

{% block content %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
      </div><!-- /.container-fluid -->
    </section>

      {% for msg in app.session.getflashbag.get('eleve.success') %}
        <div class="alert alert-success mb-2" role="alert">
          <strong>Infos</strong> {{ msg }}
        </div>
      {% endfor %}
      {% for msg in app.session.getflashbag.get('eleve.error') %}
        <div class="alert alert-warning mb-2" role="alert">
          <strong>Infos</strong> {{ msg }}
        </div>
      {% endfor %}
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="col-md-12">
          <!-- left column -->
          <div class="col-md-8 offset-2">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">SAISIR LES INFORMATIONS DE L'ELEVE</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              {{form_start(form)}}
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Nom</label>
                    {{form_widget(form.nom)}}
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Prenom</label>
                    {{form_widget(form.prenom)}}
                  </div>
                  <div class="form-group">
                    <label>Civilité</label>
                    {{ form_widget(form.sexe,{'attr':{'required':'','class':' form-control select2', 'style': '100%'}}) }}
                  </div>
                  <div class="form-group">
                  <label for="" style="font-weight: bold;">Date de naissance</label>
                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                      {{ form_widget(form.datenais,{'attr':{'required':'','class':' form-control datetimepicker-input','data-toggle':'datetimepicker', 'tata-target':'#reservationdate'}}) }}
                        <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                  </div>
                  <div class="form-group">
                  <label>Selectionner le nom du parent</label>
                    <div class="form-group" style="width: 100%;">
                      {{ form_errors(form.parents) }}
                      {{ form_widget(form.parents,{'attr':{'required':'','class':' form-control select2'}}) }}
                    </div>
                </div>
                </div>
            </div>
                <!-- /.card-body -->
                <div class="">
                  <button type="submit" class="btn btn-primary" style="float: right;">Enregistrer</button>
                </div>
               {{form_end(form)}}
            </div>
            <!-- /.card -->
          </div>
          <!--/.col (left) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock content %}

{% block script %}
<script>
$(function () {
  bsCustomFileInput.init();
});
</script>
{% endblock script %}
