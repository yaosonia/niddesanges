 {% extends "BackBundle::base.html.twig"%}

{% block title%}MESSAGERIE{% endblock title%}

{% block style %}
{% endblock style %}

{% block content %}
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Main content -->
     <section class="content-header">
    </section>
    <section class="content">
      <div class="container-fluid">
        <div class="row">

          {% include "BackBundle:Communiquer:navliste.html.twig" %}
          
        <!--CORPS DU CONTENU MESSAGE-->
        <div class="col-md-9 col-lg-9 col-sm-12">
            <div class="card card-primary card-outline">
                  <div class="card-header">
                    <h2 class="card-title">Messages re√ßus</h2>
                  </div>
                   <div class="card-body p-0">
                     <div class="mailbox-controls"> </div> 
                   <div class="btn-group"></div> 
              </div>
                  <!-- /.card-header -->
                  <div class="table-responsive mailbox-messages">
                    <table class="table table-hover table-striped">
                      <tbody>
                      {% for c in communiquer %}
                      <tr>
                            <td>
                                <!-- /.fonction de suppression -->
                              <a type="button" class="btn btn-default btn-sm"  href="{{ path('deletemessagerecuprof', { 'id': c.id }) }}">
                              <i class="far fa-trash-alt"></i></a>
                            </td>
                            <td class="mailbox-star"><a href="#"><i class="fas fa-star text-warning"></i></a></td>
                            <td class="mailbox-name"><a href="{{path('liremessagerecu', { 'id': c.id }) }}">{{ c.parent_email }}</a></td>
                            <td class="mailbox-name"><a href="{{path('liremessagerecu', { 'id': c.id }) }}">{{ c.nom_prenom }}</a></td>
                            <td class="mailbox-name"><a href="{{path('liremessagerecu', { 'id': c.id }) }}">{{ c.objet }}</a></td>
                            <td class="mailbox-subject">{{ c.contenumessage }}</td>
                            <td class="mailbox-attachment"></td>
                            <td class="mailbox-date">{{c.datemessage|date('d-m-Y')}}</td>
                      </tr>
                      {% endfor%}
                      </tbody>
                    </table>
                    <!-- /.table -->
                  </div>
                <!-- /.mail-box-messages -->
              </div>
            <!-- /.card-card-primary -->
         
        </div>
        <!-- /.col -->


        
      </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
    <!-- /.content -->
</div>
  <!-- /.content-wrapper -->
{% endblock content %}